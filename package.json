{
  "name": "@makerx/node-common",
  "version": "1.2.0",
  "private": false,
  "description": "A set of MakerX core NodeJS types and utilities",
  "author": "MakerX",
  "license": "MIT",
  "engines": {
    "node": ">=16.0"
  },
  "bugs": {
    "url": "https://github.com/MakerXStudio/node-common/issues"
  },
  "homepage": "https://github.com/MakerXStudio/node-common#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MakerXStudio/node-common.git"
  },
  "scripts": {
    "build": "run-s build:*",
    "build:0-clean": "rimraf dist coverage",
    "build:1-compile": "tsc -p tsconfig.build.json",
    "build:2-copy-pkg-json": "npx --yes @makerx/ts-toolkit@latest copy-package-json",
    "build:3-copy-readme": "copyfiles README.md dist",
    "test": "jest --coverage --coverageReporters=text",
    "npm:link": "npm link ./dist",
    "lint": "eslint ./src/ --ext .ts",
    "lint:fix": "eslint ./src/ --ext .ts --fix",
    "check-types": "tsc --noEmit",
    "audit": "better-npm-audit audit"
  },
  "dependencies": {
    "node-fetch": "^2.6.12"
  },
  "devDependencies": {
    "@tsconfig/node16": "^16.1.0",
    "@types/jest": "^29.5.3",
    "@types/lodash.omit": "^4.5.7",
    "@types/node-fetch": "^2.6.4",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "better-npm-audit": "^3.7.3",
    "copyfiles": "^2.4.1",
    "eslint": "8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest-date": "^1.1.6",
    "jest-junit": "^16.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.1",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "overrides": {
    "semver": "^7.5.3"
  }
}
